#!/usr/bin/env node

'use strict';

const optparse = require('optparse');

const Runner = require('./../src/Runner');

// write option here
const switches = [
];

const option = new Runner.Option();
const parser = new optparse.OptionParser(switches);

// parse option here

//
parser.parse(process.argv);
(async() => {
    // exec script
    const runner = new Runner(option);
    process.on('exit', runner.requestProcessShouldExit);
    await runner.run();
    process.removeListener('exit', runner.requestProcessShouldExit);
})();
